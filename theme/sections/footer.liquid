{% style %}
.footer {
  height: 203px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 68px;
  background-color: {{ section.settings.background_color }};
}

.footer__content-group {
  display: flex;
  flex-direction: column;
  gap: 32px;
  align-self: center;
}

.footer__menu {
  display: flex;
  gap: 63px;
}

.footer__menu a {
  font-family: 'HelveticaNeue', sans-serif;
  font-size: 15px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 2.15;
  letter-spacing: 1.75px;
  color: white;
  text-decoration: none;
}

.footer__menu a.is-active {
  font-weight: bold;
  text-decoration: underline;
  text-underline-offset: 16px;
  text-decoration-thickness: 2px;
}

.footer__social {
  display: flex;
  gap: 24px;
}

.footer__social-icon {
  width: 12px;
  height: 12px;
  padding: 12px;
  border: 1px solid white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  background: transparent;
}

.footer__logo {
  width: var(--logo-size, 36px);
  height: var(--logo-size, 36px);
  object-fit: contain;
}

@media screen and (max-width: 989px) {
  .footer {
    height: auto;
    padding: 32px 24px;
    flex-direction: column;
    gap: 32px;
  }

  .footer__content-group {
    width: 100%;
    align-items: center;
  }

  .footer__menu {
    flex-direction: column;
    gap: 16px;
    align-items: center;
  }

  .footer__social {
    justify-content: center;
  }
}
{% endstyle %}

<footer class="footer">
  <div class="footer__content-group">
    <nav class="footer__menu">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'menu' -%}
            {%- if block.settings.menu != blank -%}
              {%- for link in linklists[block.settings.menu].links -%}
                <a href="{{ link.url }}" {% if link.active %}class="is-active"{% endif %}>{{ link.title }}</a>
              {%- endfor -%}
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </nav>

    <div class="footer__social">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'social' -%}
            {% if block.settings.linkedin_url != blank %}
              <a href="{{ block.settings.linkedin_url }}" class="footer__social-icon" aria-label="LinkedIn">
                <svg width="12" height="12" viewBox="0 0 448 512" fill="currentColor"><path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"/></svg>
              </a>
            {% endif %}
            {% if block.settings.instagram_url != blank %}

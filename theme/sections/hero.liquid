{% assign vertical_margin = section.settings.vertical_margin | default: 0 %}
{% assign color_scheme = section.settings.color_scheme | default: 'dark' %}

{% style %}
  #shopify-section-{{ section.id }} {
    margin-top: {{ vertical_margin }}px;
    margin-bottom: {{ vertical_margin }}px;
    isolation: isolate;
  }

  .hero-media {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: grid;
    grid-template-areas: "stack";
  }

  .hero-media > * {
    grid-area: stack;
  }
{% endstyle %}

<div class="hero-media" data-color-scheme="{{ color_scheme }}">
  {% if section.blocks.size < 1 %}
    <div class="hero-media__default">
      {% content_for "block", type: "_header-for-hero", id: "header-for-hero" %}
    </div>
  {% endif %}
  {% content_for "blocks" %}
</div>

{% schema %}
{
  "name": "Hero Media",
  "tag": "section",
  "blocks": [
    { "type": "_header-for-hero" },
    { "type": "_image-for-hero" },
    { "type": "_video-for-hero" },
    { "type": "_title-for-hero" },
    { "type": "_description-for-hero" }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Color Scheme"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "dark",
      "info": "Affects text and background colors throughout the section"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "vertical_margin",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "label": "Vertical Margin",
      "info": "Space above and below this section",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Hero Media",
      "blocks": [
        {
          "type": "_header-for-hero"
        }
      ],
      "settings": {
        "vertical_margin": 0,
        "color_scheme": "dark"
      }
    }
  ]
}
{% endschema %} 
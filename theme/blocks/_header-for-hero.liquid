{% comment %}
  Content container spacing and settings
{% endcomment %}
{% assign content_padding = block.settings.content_padding | default: 32 %}
{% assign content_margin = block.settings.content_margin | default: 16 %}
{% assign content_gap = block.settings.content_gap | default: 24 %}

{% style %}
.hero-header-container {
  padding: {{ content_padding }}px;
  margin: {{ content_margin }}px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction: column;
  gap: {{ content_gap }}px;
}
{% endstyle %}

<div class="hero-header-container">
  {%- content_for "blocks" -%}
</div>

{% schema %}
{
  "name": "Header for Hero",
  "blocks": [
    { "type": "_title-for-hero" },
    { "type": "_description-for-hero" }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "content_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Content Padding",
      "default": 32
    },
    {
      "type": "range",
      "id": "content_margin",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Content Margin",
      "default": 16
    },
    {
      "type": "range",
      "id": "content_gap",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Content Gap",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Header for Hero",
      "settings": {
        "content_padding": 32,
        "content_margin": 16,
        "content_gap": 24
      }
    }
  ]
}
{% endschema %} 
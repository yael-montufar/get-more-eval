/* Reset */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Prevent iOS text size adjust after orientation change */
html {
  -moz-text-size-adjust: none;
  -webkit-text-size-adjust: none;
  text-size-adjust: none;
  height: 100%;
  margin: 0;
  padding: 0;
}

/* Style hooks - anchor tags starting with #_ */
a[href^="#_"] {
  pointer-events: none; /* Prevent clicking */
  text-decoration: none; /* Remove underline */
  /* Remove focus outline */
  outline: none;
  /* Prevent default link color */
  color: inherit;
}

/* Ensure consistent cursor behavior in hero title */
.hero-title * {
  cursor: text;
}

/* Base body defaults */
body {
  min-height: 100%;
  height: 100%;
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin: 0;
  padding: 0;
}

/* Improve media defaults */
img, picture, video, canvas, svg {
  display: block;
  max-width: 100%;
  height: auto; /* Prevent layout shift */
}

/* Remove list styles on ul, ol elements with a list role */
[role='list'] {
  list-style: none;
  margin: 0;
  padding: 0;
}

/* More accessible line-height for headings and form elements */
h1, h2, h3, h4, button, input, label {
  line-height: 1.1;
}

/* Improve text wrapping */
h1, h2, h3, h4, h5, h6 {
  text-wrap: balance;
  overflow-wrap: break-word;
}

p, li {
  text-wrap: pretty;
  overflow-wrap: break-word;
}

/* Form element defaults */
input, button, textarea, select {
  font: inherit;
}

/* Remove built-in form typography styles */
input:where([type="text"], [type="email"], [type="number"]),
textarea {
  -webkit-appearance: none;
  appearance: none;
}

/* Variables */
:root {
  --sickly-yellow: #cbe346;
  --white-two: #d8d8d8;
  --dark-two: #2b3049;
  --dark: #1e2335;
  --pale-grey: #f3f4f8;
  --warm-grey: #787878;
  --white: #fff;
  --dark-three: #282e47;

  --spacing-xxs: 4px;
  --main-font-family: 'HelveticaNeue';
  --fallback-font-family: sans-serif;
}

/* Font Definitions */
@font-face {
  font-family: 'HelveticaNeue';
  src: local('HelveticaNeueRoman'),
       url('{{ "HelveticaNeueRoman.woff2" | asset_url }}') format('woff2'),
       url('{{ "HelveticaNeueRoman.woff" | asset_url }}') format('woff'),
       url('{{ "HelveticaNeueRoman.ttf" | asset_url }}') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  font-display: swap;
}

@font-face {
  font-family: 'HelveticaNeue';
  src: local('HelveticaNeueBold'),
       url('{{ "HelveticaNeueBold.woff2" | asset_url }}') format('woff2'),
       url('{{ "HelveticaNeueBold.woff" | asset_url }}') format('woff'),
       url('{{ "HelveticaNeueBold.ttf" | asset_url }}') format('truetype');
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  font-display: swap;
}

/* Typography Classes */
.Heading-3XL {
  font-family: var(--main-font-family), var(--fallback-font-family);
  font-size: 53px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.28;
  letter-spacing: -0.05px;
  color: var(--dark);
}

.Text-LG-Normal {
  font-family: var(--main-font-family), var(--fallback-font-family);
  font-size: 18px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.78;
  letter-spacing: 0.51px;
  color: var(--dark);
}

.Text-SM-Bold {
  font-family: var(--main-font-family), var(--fallback-font-family);
  font-size: 13px;
  font-weight: bold;
  font-stretch: normal;
  font-style: normal;
  line-height: 2.15;
  letter-spacing: 1.01px;
  color: var(--dark);
}

.button {
  all: unset;
}
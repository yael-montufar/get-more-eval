#shopify-section-{{ section.id }} {
  /* Section base styles */
  .slider {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    background: white;
    overflow: hidden;
  }

  .slider__content {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
  }

  /* Splide slider styles */
  .splide-slider {
    position: relative;
  }

  .splide__slide::after {
    content: attr(data-slide-number);
    position: absolute;
    top: 0;
    left: 0;
    width: 39px;
    height: 39px;
    background-color: var(--sickly-yellow);
    margin-top: 11px;
    margin-left: 17px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--main-font-family), var(--fallback-font-family);
    color: var(--white);
  }

  /* Default content container styles */
  .slider-content-container.slider-content-container {
    margin: 4rem 24px;
  }

  /* Mobile styles (0-719px) */
  @media screen and (max-width: 719px) {
    .splide-slider {
      padding: 24px 24px;
    }
  }

  /* Tablet styles (720px-989px) */
  @media screen and (min-width: 720px) and (max-width: 989px) {
    .splide-slider {
      padding: 32px 32px;
    }
  }

  /* Desktop styles (990px+) */
  @media screen and (min-width: 990px) {
    .slider {
      flex-direction: row;
      gap: 0;
    }

    .slider > .banner-stack {
      flex: 1;
      min-width: 530px;
    }

    .slider > .splide-slider {
      flex: 1;
    }

    .slider-content-container.slider-content-container {
      margin: unset;
      max-width: 276px;
      margin-right: 50px;
      margin-top: 54px;
    }

    .slider__controls {
      margin-top: 0.75rem;
      margin-left: -15px;
    }

    .splide-slider {
      --gutter-x: 52px;
      padding-left: var(--gutter-x);
      padding-right: var(--gutter-x);
    }

    .splide {
      margin: 0;
      width: 100vw;
      margin-left: var(--gutter-x-n);
      position: unset;
      margin-top: 51px;
      margin-bottom: 73px;
    }
  }

  /* Content positioning classes */
  .slider__content--top-left {
    align-items: flex-start;
    justify-content: flex-start;
    text-align: left;
  }

  .slider__content--top-center {
    align-items: center;
    justify-content: flex-start;
  }

  .slider__content--top-right {
    align-items: flex-end;
    justify-content: flex-start;
    text-align: right;
  }

  .slider__content--middle-left {
    align-items: flex-start;
    text-align: left;
  }

  .slider__content--middle-center {
    align-items: center;
  }

  .slider__content--middle-right {
    align-items: flex-end;
    text-align: right;
  }

  .slider__content--bottom-left {
    align-items: flex-start;
    justify-content: flex-end;
    text-align: left;
  }

  .slider__content--bottom-center {
    align-items: center;
    justify-content: flex-end;
  }

  .slider__content--bottom-right {
    align-items: flex-end;
    justify-content: flex-end;
    text-align: right;
  }
} 
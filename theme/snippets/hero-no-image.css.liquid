#shopify-section-{{section_id}} {
  .hero-title a[href^="#_break"] {
    display: inline-block;
    width: fit-content;
    white-space: normal;
  }

  @media screen and (min-width: 1100px) {
    a[href^="#_break"]:first-of-type {
      display: block;
    }
    .hero-content-container {
      margin-left: 14px;
    }
    .hero-tagline {
      position: absolute;
      top: 0;
      left: 0;
      transform: translate(-116px, 10px);
      font-weight: 600;
      letter-spacing: 0.5px;
    }

    button.hero-button {
      position: absolute;
      bottom: 0;
      right: 0;
      transform: translate(
        calc(100% + min(67px, max(20px, calc((100vw - 320px) * 0.059)))),
        -9px
      );
    }
  }

  button.hero-button {
    padding-left: 35px;
    padding-right: 37px;
    border: 1px solid var(--dark-three);
  }

  .hero-button::after {
    margin-left: 54px !important;
  }
}
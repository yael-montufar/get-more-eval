<!doctype html>
<html class="js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    
    {%- comment -%}SVG favicon for modern browsers{%- endcomment -%}
    {%- if settings.favicon != blank -%}
      {%- assign favicon_url = settings.favicon | file_url -%}
      {%- assign file_extension = favicon_url | split: '.' | last | downcase -%}
      
      {%- if file_extension == 'svg' -%}
        <link rel="icon" type="image/svg+xml" href="{{ settings.favicon | file_url }}">
      {%- else -%}
        <link rel="icon" href="{{ settings.favicon | image_url: width: 32, height: 32 }}" sizes="32x32">
        <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180, height: 180 }}">
      {%- endif -%}
    {%- else -%}
      <link rel="icon" type="image/svg+xml" href="{{ 'icon.svg' | asset_url }}">
      <link rel="icon" href="{{ 'favicon.ico' | asset_url }}" sizes="32x32">
      <link rel="apple-touch-icon" href="{{ 'apple-touch-icon.png' | asset_url }}">
    {%- endif -%}

    <title>{{ page_title }}</title>

    {{ 'base.css' | asset_url | stylesheet_tag }}
    {{ 'header-group.css' | asset_url | stylesheet_tag }}

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}
  </head>

  <body>
    <div class="custom-group">
      <!-- Announcement Bar -->
      <div class="header-group__announcement">
        Sample announcement text
      </div>
    </div>
    <div class="header-group">
      <!-- Left Vertical Bar -->
      <header class="header-group__sidebar">
        <svg class="header-group__sidebar-icon" aria-hidden="true" width="24" height="24" viewBox="0 0 24 24">
          <rect width="24" height="2" fill="currentColor"/>
          <rect y="11" width="24" height="2" fill="currentColor"/>
          <rect y="22" width="24" height="2" fill="currentColor"/>
        </svg>
        
        <a href="/" class="header-group__logo">
          <span class="visually-hidden">Home</span>
          LOGO
        </a>
        
        <div class="header-group__sidebar-lang">
          <button type="button" lang="en">EN</button>
          <button type="button" lang="es">ES</button>
        </div>
      </header>

      <!-- Top Navigation Space -->
      <div class="header-group__content">
        <!-- Navigation Bar -->
        <section class="header-group__nav-space">
          <nav class="header-group__nav">
            <a href="/collections">Shop</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
            <a href="/blog">Blog</a>
          </nav>
          
          <div class="header-group__lang">
            <button type="button" lang="en">EN</button>
            <button type="button" lang="es">ES</button>
          </div>
        </section>
      </div>
    </div>

    <main role="main" id="MainContent">
      <!-- Test Section -->
      <div class="test-section">
        <div class="test-section__content">
          <h1>Test Section</h1>
          <p>This section should span the full width of the screen naturally, regardless of the header layout.</p>
        </div>
      </div>

      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}
    <script src="{{ 'header-group.js' | asset_url }}" defer></script>
  </body>
</html>